<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brandon.apiclient.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to get posts" />

        <Button
            android:id="@+id/btnGetPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Posts" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to get comments" />

        <Button
            android:id="@+id/btnGetComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Comments" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to see posts" />

        <Button
            android:id="@+id/btnSeePosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Posts" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to see comments" />

        <Button
            android:id="@+id/btnSeeComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Comments" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to post posts" />

        <Button
            android:id="@+id/btnPostPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Posts" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to post comments" />

        <Button
            android:id="@+id/btnPostComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Comments" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the button to see posts with comments" />

        <Button
            android:id="@+id/btnSeePostsWithComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Posts With Comments" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
